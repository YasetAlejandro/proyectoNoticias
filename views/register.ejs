                <input type="submit" class="btn-save" value="save">
            </div>


        </form>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>

      <% if(typeof alert!= "undefined"){%>
        <script>
            Swal.fire({
                title: "<%= alertTitle %>",
                text:"<%= alertMessage %>",
                icon: "<%= alertIcon %>",
                showConfirmButton:<%= showConfirmButton %>,
                time: <%= time %>
            }).then(()=>{
                window.location="/<%= ruta %>"
            })
        </script>
        <% } %>
</body>
</html>